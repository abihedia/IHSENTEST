<odoo>
    <data>
        <!-- inherit a form view -->
        <record model="ir.ui.view" id="view_sale_order_form_inherit">
            <field name="name">sale.order.form.inherit</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/group/field[@name='payment_term_id']" position="after">
<!--                    <label for="amount_market"/>-->
<!--                    <div name="amount_market" class="d-flex">-->
<!--                        <field name="amount_market"/>-->
<!--                    </div>-->
                    <field name="advance_bc" invisible="1"/>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='product_id']"
                       position="after">
                    <field name="categ_id"/>
<!--                    <field name="per_advance"/>-->
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/tree/field[@name='sequence']"
                       position="attributes">
                    <attributes name="invisible">1</attributes>
                </xpath>
                <xpath expr="//form/sheet/notebook/page/field[@name='order_line']/form/field[@name='display_type']"
                       position="after">
                    <label for="price_subtotal" />
                    <field name="price_subtotal"/>

                </xpath>
            </field>
        </record>

    </data>
</odoo>